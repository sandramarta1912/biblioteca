

<div style="margin-left:25%">

		<% if (success.length > 0) { %>
		<div class="alert alert-success"><%= success %></div>
		<% } %>

		<div class="jumbotron text-center">
			<h1>
				Readers
			</h1>
		</div>

		<table class="table table-border table-hover table-striped">
			<thead>
			<tr>
				<th>Name</th>
				<th>Age</th>
				<th>Email</th>
				<th>
					<% if (isAuthenticated) { %>
					<a href="/admin/create/reader" class="btn btn-sm btn-primary">
						Create a user
					</a>
					<% } %>
				</th>
			</tr>
			</thead>

			<tbody>

			<% for (var reader of readers) { %>
			<tr>
				<td><%= reader.name %></td>
				<td><%= reader.age %></td>
				<td><%= reader.email %></td>
				<td>

					<!--<a href="/readers/<%= reader.description %>" class="btn btn-sm btn-primary">View</a>-->
					<a href="/readers/<%= reader.description %>/edit" class="btn btn-sm btn-primary">Edit</a>
					<a href="/readers/<%= reader.description %>/delete" class="btn btn-sm btn-danger">Delete</a>
				</td>
			</tr>

			<% } %>

			<%- include('../../pagination', {pagination: pagination}) %>


			</tbody>
		</table>



</div>

