extends ../../layout.pug

block body
	.container
		.jumbotron.text-center
			h1 Books
				table.table.table-border.table-hover.table-striped
					thead
					tr
						th Books Name
						th Author
						th
							if isAuthenticated
							a(href="/admin/create/reader").btn.btn-sm.btn-primary Create a user
					if typeof books != 'undefined' && books.length > 0
						for(var book of books)
						tr
							td #{book.name}
							td #{book.author}
							td
								a(href="/books/#{book.description}").btn.btn-sm.btn-primary View
								a(href="/books/#{book.description}/edit").btn.btn-sm.btn-primary Edit
								a(href="/books/#{book.description}/delete").btn.btn-sm.btn-danger Delete
					else Nu ai nici o carte;
					#{- include('../../pagination', {pagination: pagination}) }