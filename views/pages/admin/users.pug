extends ../../layout.pug

block body
    .container
        input(type="hidden" name="_csrf" value= {csrfToken})
        if success.length > 0 
            .alert.alert-success #{success}
        .jumbotron.text-center
            h1 Utilizatori
            table.table.table-border.table-hover.table-striped
                thead
                tr
                    th Name
                    th Prenume
                    th Age
                    th Email
                    th Carti Imprumutate
                    th                        
                        if isAuthenticated
                        a.btn-btn-sm.btn-primary(href="/admin/create/user") Create a user
                for(var reader of readers)
                tr
                    td #{reader.name }
                    td #{reader.age }
                    td #{reader.email }
                    td
                        a.btn.btn-sm.btn-primary(href="/readers/{reader.description}")  View
                        a.btn.btn-sm.btn-primary(href="/readers/{reader.description}/edit") Edit
                        a.btn.btn-sm.btn-primary(href="/readers/{reader.description}/delete") Delete
            #{- include('../../pagination', {pagination: pagination}) }

        
        
        
