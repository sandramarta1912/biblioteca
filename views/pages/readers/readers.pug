extends ../admin/admin.pug

block admin-content
    .container
        if success.length > 0
            .alert.alert-success #{success}
        .jumbotron.text-center
            h1 Readers
        table.table.table-border.table-hover.table-striped
            thead
            tr
                th Name
                th Age
                th Email
                th
                    if isAuthenticated
                    a.btn.btn-sm.btn-primary(href="/admin/create/reader") Create a user
            for(var reader of readers)
            tr
                td #{reader.name}
                td #{reader.age }
                td #{reader.email}
                td
                    //a.btn.btn-sm.btn-primary(href="/readers/#{reader.description}") View
                    a.btn-btn-sm.btn-primary(href="/admin/#{reader.description}/edit") Edit
                    a.btn.btn-sm.btn-danger(href="/admin/#{reader.description}/delete") Delete
        #{-include('../../pagination', {pagination: pagination}) }