extends ../admin/admin.pug

block admin-content
	.container-fluid
		.card.admin
			.card-body.border.border-black.rounded
				h1.text-center Books
				table.table.table-striped
					thead
						tr
							th Books Name
							th Author
							if typeof books != 'undefined' && books.length> 0
								each book, index in books
									tr
										td #{book.name}
										td #{book.author}
										td
											a.btn.btn-sm.btn-primary(href='/books/#{book.slug}')
							else
								h1 Nu ai nici o carte