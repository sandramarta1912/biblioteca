extends ../admin/admin.pug

block admin-content
	.container-fluid.background
			h1 Books
			table.table.table-border.table-hover.table-striped
				thead
					tr
						th Books Name
						th Author
						if typeof books != 'undefined' && books.length> 0
							each book, index in books
								tr
									td #{book.name}
									td #{book.author}
									td
										a.btn.btn-sm.btn-primary(href='/books/#{book.slug}')
						else
							h1 Nu ai nici o carte