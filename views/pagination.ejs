<% if (pagination.pageCount > 1) { %>
    <ul class="pagination">
        <% if (pagination.currentPage > 1) { %>
            <li class="page-item"><a class="page-link" href=<% pagination.links[0] %>>&laquo;</a></li>
        <% }

        var i = 1;
        if (pagination.currentPage > 5) {
            i = +pagination.currentPage - 4;
        }

        if (i !== 1) { %>
            <li class="page-item disabled"><a class="page-link" href="#">...</a></li>
        <% }

        for (i; i<=pagination.pageCount; i++) {
            if (pagination.currentPage == i) { %>
                <li class="active page-item"><a class="page-link"><%= i %></a></li>
            <% } else { %>
                <li><a class="page-link" href=<%= pagination.links[i - 1] %>><%= i %></a></li>
            <% }

            if (i == (+pagination.currentPage + 4)) { %>
                <li class="disabled page-item"><a class="page-link" href="#">...</a></li>
                <% break;
            }
        }

        if (pagination.currentPage != pagination.pageCount) { %>
            <li class="page-item"><a class="page-link" href=<%= pagination.links[pagination.links.length - 1] %>>&raquo;</a></li>
        <% } %>
    </ul>
<% } %>