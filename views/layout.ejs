  <header id="site-header">


    <nav class="navbar navbar-default navbar-toggleable-md navbar-light  bg-faded navbar-fixed-top">
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <a class="navbar-brand" href="/">
        <img src="/images/logo.png" width="30" height="30" class="d-inline-block align-top" alt="">
        Biserica Emanuel
      </a>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" href="/">Prima pagină <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/books">Bibliotecă</a>
          </li>
          <% if (isAuthenticated) {%>
            <li class="nav-item">
              <a class="nav-link" href="/readers">Cititori</a>
            </li>
          <% } %>

          <li class="nav-item">
            <a class="nav-link" href="/readers/create">creaza cititori</a>
          </li>


          <!--
          Ce-i mai jos trebui tras la dreapta - uita-te in documentatia Bootstrap 4
          http://v4-alpha.getbootstrap.com/components/navbar/
          -->
          <% if (isAuthenticated) {%>
            <li class="nav-item">
              <a class="nav-link" href="/user/logout">Logout</a>
            </li>
          <% } else { %>
            <li class="nav-item">
              <a class="nav-link" href="/user/register">Register</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/user/login">Login</a>
            </li>
          <% } %>
          <li class="nav-item">
            <a class="nav-link" href="/program">Program</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/contact">Contact</a>
          </li>
          <li class="nav-item">
            <form action="/search">
              <input name="term" type="text" id="search" value="<%= typeof searchTerm!='undefined' ? searchTerm : '' %>">
              <button onclick="">Search</button>
            </form>
          </li>
        </ul>




      </div>
    </nav>
  </header>

  <!--main -->
  <main id="site-main">
    <div class="container">
      <% if (typeof errors !== 'undefined' && errors.length) { %>
      <div class="alert alert-danger">
        <% for (error of errors) { %>
        <%= error %><br>
        <% } %>
      </div>
      <% } %>
      <%- body %>
    </div>

